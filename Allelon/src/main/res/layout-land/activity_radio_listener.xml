<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/logo_allelon">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:id="@+id/listenButton"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:id="@+id/closeButton"
        android:layout_marginRight="13dp"
        android:layout_alignTop="@+id/listenButton"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:layout_alignBottom="@+id/listenButton"
        android:id="@+id/websiteButton"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/listenButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listenButton"
        android:text="Contact"
        android:id="@+id/contactButton"
        android:layout_toRightOf="@+id/websiteButton"
        android:layout_alignTop="@+id/websiteButton" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/availableStreams"
        android:layout_alignBottom="@+id/listenButton"
        android:entries="@array/available_streams"
        android:layout_toRightOf="@+id/contactButton"
        android:layout_toLeftOf="@+id/listenButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/statusTextView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/listenButton"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volume"
        android:id="@+id/textView"
        android:layout_marginLeft="13dp"
        android:layout_alignBottom="@+id/statusTextView"
        android:layout_alignParentLeft="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volumeSeekBar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/statusTextView"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:max="100" />

</RelativeLayout>